---
import { themeConfig } from '../config';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
const { pageTitle } = Astro.props;
const { backgroundColor, secondaryBG, primaryColor, secondaryColor, accentColor } = themeConfig.styling;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{themeConfig.site.title} | {pageTitle}</title>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style define:vars={{ backgroundColor, secondaryBG, primaryColor, secondaryColor, accentColor }}>
  :root {
    --color-bg: var(--backgroundColor);
    --color-bg-secondary: var(--secondaryBG);
    --color-primary: var(--primaryColor);
    --color-secondary: var(--secondaryColor);
    --color-accent: var(--accentColor);
  }

  main {
    padding-top: 5rem;
  }
</style>