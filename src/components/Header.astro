---
import Navigation from './Navigation.astro';
---
<header>
  <Navigation />
</header>

<style>
  header {
    position: fixed;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    max-width: 64ch;
    padding: 2rem 2rem 1rem;
    background-color: var(--color-bg);
    z-index: 1000;
    box-sizing: border-box;
  }

  header::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 2rem;
    right: 2rem;
    height: 1px;
    background-color: var(--color-secondary);
  }
</style>