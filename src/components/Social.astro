---
import { themeConfig } from "../config";
---
<div class="social">
  {themeConfig.social.map((item) => (
    <a href={item.href} target="_blank" rel="noopener noreferrer">
      {item.label}
    </a>
  ))}
</div>

<style>
  .social {
    display: flex;
    gap: 1rem;
  }

  a {
    color: var(--color-secondary);
    text-decoration: none;
    font-size: 0.875rem;
  }

  a:hover {
    color: var(--color-accent);
  }
</style>